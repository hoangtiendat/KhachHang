<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            {{title}}
        </h3>
        <form name="filterForm" action="/product" method="post">
        <div class="row">
        {{store}}
            <div class="col-md-3">
                <label for="categoryType">
                  Loại sản phẩm <span style="color: red">*</span>
                </label>
                <select class="form-control" id="categoryType" name="categoryType">
                  <option value="">Tất cả</option>
                  {{#each categories}}
                    <option value="{{categoryId}}">{{categoryName}}</option>
                  {{/each}}
                </select>
            </div>
            <div class="col-md-3">
                <label for="storeType">
                  Hãng sản xuất <span style="color: red">*</span>
                </label>
                <select class="form-control" id="storeType" name="storeType">
                  <option value="">Tất cả</option>
                  {{#each brands}}
                    <option value="{{brandId}}">{{name}}</option>
                  {{/each}}
                </select>
            </div>
            <div class="col-md-3">
                <label for="priceType">
                  Mức giá <span style="color: red">*</span>
                </label>
                <select class="form-control" id="priceType" name="priceType">
                  <option value="">Tất cả</option>
                  <option value="3000000">Dưới 3 triệu</option>
                  <option value="7000000">Từ 3 - 7 triệu</option>
                  <option value="10000000">Từ 7 - 10 triệu</option>
                  <option value="10000001">Trên 10 triệu</option>
                </select>
            </div>
            <div class="col-md-2">
                <div class="right-w3l">
                    <input id="filterBtn" type="submit" class="form-control" value=" Submit ">
                </div>
            </div>
            
        </div>
        </form>
        <div class="row">
            <div class="col-lg-8 header-right mt-lg-0 mt-2">
              <ul>
                  <li class="text-center">
                      <p>Sắp xếp theo: </p>
                  </li>
                  <li class="text-center border-right">
                      <p><a href="?sort=name">Tên</a></p>
                  </li>
                  <li class="text-center border-right">
                      <p><a href="?sort=price">Giá</a></p>
                  </li>
              </ul>
            </div>
        </div>
       
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-9">
                <div class="wrapper">
                    <!-- template section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <!-- <div class="row" id="result">

                        </div> -->
                        <div class="row">
                        {{# each products}}
                        <div class="col-md-4 product-men mt-5">
                              <div class="men-pro-item simpleCart_shelfItem">
                                  <div class="men-thumb-item text-center">
                                      <img src="{{urlImage}}" alt="">
                                      <div class="men-cart-pro">
                                          <div class="inner-men-cart-pro">
                                              <form action="/item_detail" method="get">
                                                  <input type="hidden" name="productId" value="{{productId}}"/>
                                                  <a href="#" onclick="this.parentNode.submit(); return false;" class="link-product-add-cart">Xem nhanh</a>
                                              </form>

                                          </div>
                                      </div>
                                      {{#if new}}
                                      <span class="product-new-top">Mới</span>
                                      {{/if}}
                                  </div>
                                  <div class="item-info-product text-center border-top mt-4">
                                      <h4 class="pt-1">
                                          <form action="/item_detail" method="get" style="">
                                              <input type="hidden" name="productId" value="{{productId}}"/>
                                              <a href="#" onclick="this.parentNode.submit(); return false;">{{name}}</a>
                                          </form>
                                      </h4>
                                      <div class="info-product-price my-2">
                                          <span class="item_price">{{number (math price "-" discount)}} VNĐ</span>
                                          <del>{{number price}}</del>
                                      </div>
                                      <a href="/add/{{productId}}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
                                  </div>
                              </div>
                          </div>
                        {{/each}}
                        </div>
                    </div>
                    <!-- //template section -->
                    
                    <nav aria-label="Page navigation example">
                      <ul class="pagination">
                        {{#paginate pagination type="first"}}
                          <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link" href="?p={{n}}">First</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="previous"}}
                          <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link" href="?p={{n}}">Prev</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="middle" limit="7"}}
                          <li class="page-item {{#if active}}active{{/if}}"><a class="page-link" href="?p={{n}}">{{n}}</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="next"}}
                          <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link" href="?p={{n}}">Next</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="last"}}
                          <li class="page-item {{#if disabled}}disabled{{/if}}"><a class="page-link" href="?p={{n}}">Last</a></li>
                        {{/paginate}}
                      </ul>
                    </nav>
                   

                </div>
            </div>
            <!-- //product left -->

            <!-- product right -->
