          paypals.minicarts.cart.on('checkout', function (evt) {
              var items = this.items(),
                      len = items.length,
                      total = 0,
                      i;

              // Count the number of each item in the cart
              for (i = 0; i < len; i++) {
                  total += items[i].get('quantity');
              }

              if (total < 1) {
                  alert('Không có sản phẩm nào trong giỏ hàng. Hãy thêm sản phẩm vào giỏ hàng');
                  evt.preventDefault();
              }
          });
