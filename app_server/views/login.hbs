<!DOCTYPE html>
<html lang="vi">
<head>
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <!-- Custom-Files -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Bootstrap css -->
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/stylesheets/login.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Main css -->
    <link rel="stylesheet" href="/stylesheets/fontawesome-all.css">
    <!-- Font-Awesome-Icons-CSS -->

    <!-- web fonts -->
    <link href="//fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese"
          rel="stylesheet">

</head>
<body>
    <div class="bg-image"></div>
    <div class="container">
        <!-- modals -->
        <!-- log in -->
        <div class="show" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-center">Đăng nhập</h5>
                    </div>
                    <div class="modal-body">
                        <form name="loginForm" action="/login" method="post">
                            <div class="form-group">
                                <label class="col-form-label">Tài khoản</label>
                                <input type="text" class="form-control" placeholder="Tài khoản" name="username" required="">
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Mật khẩu" name="password" required="">
                            </div>
                            <div class="right-w3l">
                                <input id="loginBtn" type="submit" class="form-control" value="Đăng nhập">
                            </div>
                            <div class="sub-w3l">
                                <div class="custom-control custom-checkbox mr-sm-2 align-right">
                                    <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                                    <label class="custom-control-label" for="customControlAutosizing">Duy trì đăng nhập</label>
                                    <a href="" id="forgetPasswordBtn" class="float-right text-right dont-do" data-toggle="modal" data-target="#forgetPasswordModal">
                                        Quên mật khẩu</a>
                                </div>
                            </div>
                            <p class="text-center dont-do mt-3">Chưa có tài khoản ?
                                <a href="" data-toggle="modal" data-target="#registerModal">
                                    Đăng ký ngay</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
