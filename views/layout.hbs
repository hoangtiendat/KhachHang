      <script>
          window.onload = function () {
              function validatePassword(id1, id2) {
                  var pass2 = document.getElementById(id2).value;
                  var pass1 = document.getElementById(id1).value;
                  if (pass1 != pass2)
                      document.getElementById(id2).setCustomValidity("Mật khẩu không trùng nhau");
                  else
                      document.getElementById(id2).setCustomValidity('');
                  //empty string means no validation error
              }

              document.getElementById("password1").addEventListener('change', (e) => {
                  validatePassword("password1", "password2");
              })
              document.getElementById("password2").addEventListener('change', (e) => {
                  validatePassword("password1", "password2");
